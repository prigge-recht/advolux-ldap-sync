{
    "name": "rocramer/advolux-ldap-sync",
    "description": "Advolux LDAP Sync",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Robin Cramer",
            "email": "mail@robincramer.de"
        }
    ],
    "require": {
        "php": "^8.0",
        "ext-ldap": "*",
        "ext-simplexml": "*",
        "ext-xml": "*",
        "illuminate/log": "^9.0",
        "laravel-zero/framework": "^9.0",
        "orchestra/parser": "^7.0"
    },
    "require-dev": {
        "mockery/mockery": "^1.5",
        "pestphp/pest": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "bin": [
        "advolux-ldap-sync"
    ]
}
